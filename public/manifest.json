{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "/static/css/main.css"
      ],
      "js": [
        "/static/js/main.js",
        "/popup.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ]
}